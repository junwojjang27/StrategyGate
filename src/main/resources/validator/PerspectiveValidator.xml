<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
	"-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN"
	"http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>
	<formset>
		<form name="perspectiveVO">
			<field property="perspectiveId" depends="maxlength">
				<arg0 key="word.perspectiveId" resource="true"/>
				<arg1 key="7" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>7</var-value>
				</var>
			</field>
			<field property="perspectiveNm" depends="required, maxByteLength">
				<arg0 key="word.perspectiveNm" resource="true"/>
				<arg1 key="150" resource="false"/>
				<var>
					<var-name>maxByteLength</var-name>
					<var-value>150</var-value>
				</var>
			</field>
			<field property="sortOrder" depends="integer">
				<arg0 key="word.sortOrder" resource="true"/>
				<arg1 key="10" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>10</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>